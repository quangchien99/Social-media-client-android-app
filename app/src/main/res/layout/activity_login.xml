<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/color_light_blue"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_top_60dp"
        android:layout_marginBottom="@dimen/margin_bottom_30dp"
        android:text="login"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_60sp"
        android:textStyle="bold|italic" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="ProfileName"
        android:textColorHint="@color/color_black"
        app:hintTextAppearance="@color/color_black">

        <EditText
            android:id="@+id/edt_user_name"
            android:layout_width="@dimen/width_250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_top_30dp"
            android:drawableLeft="@drawable/ic_username"
            android:drawablePadding="@dimen/drawable_padding_10dp"
            android:inputType="text"
            android:textColorHint="@color/color_black"
            android:textColor="@color/color_black" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Password"
        android:textColorHint="@color/color_black"
        android:textColor="@color/color_black"
        app:hintTextAppearance="@color/color_black">

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="@dimen/width_250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_top_30dp"
            android:drawableLeft="@drawable/ic_password2"
            android:drawablePadding="@dimen/drawable_padding_10dp"
            android:inputType="textPassword"
            android:textColor="@color/color_white" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="@dimen/width_150dp"
        android:layout_height="@dimen/height_60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_top_30dp"
        android:background="@drawable/custom_button"
        android:drawableLeft="@drawable/ic_login"
        android:drawablePadding="5dp"
        android:padding="@dimen/padding_5dp"
        android:text="Login"
        android:textColor="@color/color_black" />

    <TextView
        android:id="@+id/tv_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_top_30dp"
        android:text="Forgot Password?"
        android:textColor="@color/color_black"
        android:textSize="@dimen/text_size_20sp" />

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_top_20dp"
        android:text="Register"
        android:textColor="@color/color_black"
        android:textSize="@dimen/text_size_20sp" />
</LinearLayout>