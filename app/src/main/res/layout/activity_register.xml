<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_blue"
    android:orientation="vertical"
    tools:context=".activity.RegisterActivity">

    <TextView
        android:id="@+id/tv_create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_top_30dp"
        android:text="Create an account"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_30sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_blue"
        android:orientation="horizontal"
        tools:context=".activity.RegisterActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_blue"
            android:orientation="vertical"
            tools:context=".activity.RegisterActivity">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_edt_first_name"
                android:layout_width="@dimen/width_175dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_15dp"
                android:layout_marginTop="@dimen/margin_top_30dp"
                android:drawableLeft="@drawable/ic_user_1"
                android:drawablePadding="10dp"
                android:hint="FirstName"
                android:inputType="text"
                android:textColorHint="@color/color_white" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_edt_last_name"
                android:layout_width="@dimen/width_175dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_15dp"
                android:layout_marginTop="@dimen/margin_top_30dp"
                android:drawableLeft="@drawable/ic_user_1"
                android:drawablePadding="10dp"
                android:hint="LastName"
                android:inputType="text"
                android:textColorHint="@color/color_white" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_edt_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_15dp"
                android:layout_marginTop="@dimen/margin_top_30dp"
                android:drawableLeft="@drawable/ic_user_1"
                android:drawablePadding="@dimen/drawable_padding_10dp"
                android:hint="UserName"
                android:inputType="text"
                android:textColorHint="@color/color_white" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_edt_address"
                android:layout_width="@dimen/width_175dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_15dp"
                android:layout_marginTop="@dimen/margin_top_30dp"
                android:drawableLeft="@drawable/ic_address"
                android:drawablePadding="@dimen/drawable_padding_10dp"
                android:hint="Address"
                android:inputType="text"
                android:textColorHint="@color/color_white" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_blue"
            android:orientation="vertical"
            tools:context=".activity.RegisterActivity">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_edt_phone"
                android:layout_width="@dimen/width_175dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_30dp"
                android:layout_marginTop="@dimen/margin_top_30dp"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="@dimen/drawable_padding_10dp"
                android:hint="PhoneNumber"
                android:inputType="number"
                android:textColorHint="@color/color_white" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_edt_email"
                android:layout_width="@dimen/width_175dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_30dp"
                android:layout_marginTop="@dimen/margin_top_30dp"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="@dimen/drawable_padding_10dp"
                android:hint="Email"
                android:inputType="text"
                android:textColorHint="@color/color_white" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_edt_password"
                android:layout_width="@dimen/width_175dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_30dp"
                android:layout_marginTop="@dimen/margin_top_30dp"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="@dimen/drawable_padding_10dp"
                android:hint="Password"
                android:inputType="text"
                android:textColorHint="@color/color_white" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_edt_confirm_password"
                android:layout_width="@dimen/width_175dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_30dp"
                android:layout_marginTop="@dimen/margin_top_30dp"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="@dimen/drawable_padding_10dp"
                android:hint="Confirm Password"
                android:inputType="text"
                android:textColorHint="@color/color_white" />
        </LinearLayout>
    </LinearLayout>

    <Spinner
        android:id="@+id/spn_questions"
        android:layout_width="@dimen/width_250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_top_30dp"
        android:background="@color/color_light_blue"
        android:popupBackground="@color/color_light_blue" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_edt_answer"
        android:layout_width="@dimen/width_250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_top_30dp"
        android:drawableLeft="@drawable/ic_answer"
        android:drawablePadding="@dimen/drawable_padding_10dp"
        android:hint="Answer"
        android:inputType="text"
        android:textColorHint="@color/color_white" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="@dimen/width_150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_top_30dp"
        android:background="@drawable/bg_custom_layout"
        android:drawableLeft="@drawable/ic_register"
        android:text="Register"
        android:textColor="@color/color_black"
        android:textStyle="bold" />
</LinearLayout>