<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_light_blue"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/width_70dp"
            android:layout_height="@dimen/height_70dp"
            android:padding="8dp"
            android:src="@drawable/ic_person" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_light_blue"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_status_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_8dp"
                android:text="Quang Chien Pham"
                android:textColor="@color/color_black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_status_time_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_8dp"
                android:text="20:00:44 28/11/2020"
                android:textColor="@color/color_black" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_status_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_10dp"
        android:padding="@dimen/padding_15dp"
        android:text="To day is a wonderful day heheeeeeeeee"
        android:textColor="@color/color_black"
        android:textSize="@dimen/text_size_20sp"
        android:textStyle="italic" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/width_350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_10dp"
        android:background="@color/color_light_blue"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_comment"
            android:layout_width="@dimen/width_150dp"
            android:layout_height="70dp"
            android:background="@color/color_white"
            android:hint="Type your comment here..."
            android:textColor="@color/color_black"
            android:textColorHint="@color/color_black"
            android:textSize="@dimen/text_size_10sp" />

        <Button
            android:id="@+id/btn_status_comment"
            android:layout_width="@dimen/width_150dp"
            android:layout_height="@dimen/height_50dp"
            android:layout_marginStart="@dimen/margin_start_40dp"
            android:background="@drawable/custom_button"
            android:drawableLeft="@drawable/ic_comment"
            android:padding="@dimen/padding_10dp"
            android:text="Comment" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_comments"
        android:layout_width="@dimen/width_350dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_top_10dp" />
</LinearLayout>